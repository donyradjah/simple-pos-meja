<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp">


        <TextView
            android:id="@+id/txtNamaProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingMultiplier="1"
            android:text="Nama Produksadasdsadasdadad"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtHargaProduk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Rp. 5000"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNamaProduk"
            app:layout_constraintWidth_percent="0.33" />

        <TextView
            android:id="@+id/txtQtyProduk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:text="Rp. 5000"
            android:textAlignment="center"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toRightOf="@id/txtHargaProduk"
            app:layout_constraintTop_toBottomOf="@id/txtNamaProduk"
            app:layout_constraintWidth_percent="0.33" />

        <TextView
            android:id="@+id/txtTotalProduk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="end"
            android:text="Rp. 5000"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintLeft_toRightOf="@id/txtQtyProduk"
            app:layout_constraintTop_toBottomOf="@id/txtNamaProduk"
            app:layout_constraintWidth_percent="0.33" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>